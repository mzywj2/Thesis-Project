# Activate the telociraptor environmemt if not already activated
conda activate telociraptor_env

# Navigate to the directory that has the .py file and run the command on the command line
python telociraptor.py -seqin /gpfs01/home/mzywj2/Cochlearia_groenlandica.fa -basefile C_groe i=-1 tweak=F telonull=T

