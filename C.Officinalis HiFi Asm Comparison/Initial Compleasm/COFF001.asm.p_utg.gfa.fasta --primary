#!/bin/bash

#SBATCH --job-name=compleasm
#SBATCH --partition=defq
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=32
#SBATCH --mem=128g
#SBATCH --time=96:00:00
#SBATCH --output=/gpfs01/home/mzywj2/slurm-%x-%j.out
#SBATCH --error=/gpfs01/home/mzywj2/slurm-%x-%j.err
#######################
# PREPARE ENVIRONMENT #
#######################

# Load anaconda module and activate busco environment
module load anaconda-uoneasy/2023.09-0
source ~/.bash_profile
conda activate compleasm

# Run compleasm
compleasm run -a /gpfs01/home/mzywj2/COFF001.asm.p_utg.gfa.fasta -o /gpfs01/home/mzywj2 -l brassicales -L /gpfs01/home/mzywj2/busco_downloads/lineages/brassicales-odb10 -t 32


# This is a HiFi assembly with --primary flag

# The output directory is called brassicales_obd10_COFF001.asm.p_utg the path to this directory is: /gpfs01/home/mzywj2/brassicales_obd10_COFF001.asm.p_utg

