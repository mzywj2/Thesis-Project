# Activate the TIDK environment if not already activated
conda activate tidk_env

# Run the command
tidk search -s TTAGGG -o Cochlearia_off_whole -d /gpfs01/home/mzywj2 --extension tsv /gpfs01/home/mzywj2/COFF001.asm.p_ctg.gfa.fasta

# In order to use this as an input file for chromsyn, the tsv file must be converted into a csv file
awk 'BEGIN {FS="\t"; OFS=","} {$1=$1} 1' Cochlearia_off_whole_telomeric_repeat_windows.tsv > Cochlearia_off_whole_telomeric_repeat_windows.csv
